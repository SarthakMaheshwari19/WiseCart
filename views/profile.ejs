    <div class="profile-container">
        <div class="big-container" style="display: flex; flex-direction: column; align-items: center;">
            <div>
                <label for="name" style="flex: 1; font-weight: bold;">Name: </label>
                <span id="nameDisplay" style="flex: 2; font-size: 1.2em;">
                    <%= user.name %>
                </span>
            </div>
            <div>
                <label for="email" style="flex: 1; font-weight: bold;">Email: </label>
                <span id="emailDisplay" style="flex: 2; font-size: 1.2em;">
                    <%= user.email %>
                </span>
            </div>
            <button class="edit-button" onclick="showEditFields()">Edit Details</button>
            <div id="editFields" style="display: none;">
                <label for="name">New Name: </label>
                <input type="text" id="name" value="<%= user.name %>">
                <label for="email">New Email: </label>
                <input type="email" id="email" value="<%= user.email %>">
                <button class="edit-button" onclick="editNameAndEmail()">Save</button>
            </div>
        </div>
