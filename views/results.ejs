<!-- results.html -->
<html>

<head>
    <style>
        /* Global Styles */

        body {
            background: #f6f5f7;
            font-family: 'Montserrat', sans-serif;
        }

        h1,
        h2,
        h3 {
            color: #FF416C;
        }

        a {
            color: #FF4B2B;
            font-size: 14px;
        }

        /* Results Styles */

        .container {
            display: flex;
            justify-content: center;
            flex-wrap: wrap;
            gap: 20px;
            background: #fefefe00;
            border-radius: 10px;
            
            overflow: hidden;
            max-width: 1300px;
            margin: 25px auto;
        }

        .column {
            background-color: whitesmoke;
            flex: 1 1 calc(30% - 10px);
            box-sizing: border-box;
            margin-bottom: 20px;
            display: flex;
            flex-direction: column;
            max-height: 70vh;
            max-width: 500px;
            border-radius: 10px;
            overflow: hidden;
            box-shadow: 5px 10px 7px rgba(0, 0, 0, 0.25), 0 6px 6px rgba(0, 0, 0, 0.23);
        }

        .column-header {
            font-size: 1.8em;
            font-weight: bold;
            background: linear-gradient(to right, #FF4B2B, #FF416C);
            color: #fff;
            padding: 15px;
            border-bottom: 1px solid #dee2e6;
            border-radius: 10px 10px 0 0;
        }

        .column-content {
            flex: 1;
            overflow-y: auto;
            padding: 20px;
        }

        ul {
            list-style-type: none;
            padding: 0;
            margin: 0;
        }

        li {
            display: flex;
            align-items: center;
            margin-bottom: 20px;
            border-bottom: 1px solid #dee2e6;
            padding-bottom: 15px;
        }

        img {
            width: 136px;
            height: 220px;
            border-radius: 10px;
            margin-right: 20px;
        }

        h3 {
            color: #3F2B96;
        }

        p {
            color: #6c757d;
        }

        a {
            color: #3F2B96;
            text-decoration: none;
            transition: color 0.3s;
        }

        a:hover {
            color: #A8C0FF;
        }
    </style>
</head>

<body>
    <div style="height: 100px;"></div>

    <div class="container">
        <div class="column">
            <div class="column-header">Amazon Results</div>
            <div class="column-content">
                <ul>
                    <!-- Amazon data rendering -->
                    <% amazonData.forEach(product=> { %>
                        <li>
                            <img src="<%= product.image_url %>" alt="<%= product.title %>">
                            <div>
                                <h3>
                                    <%= product.title %>
                                </h3>
                                <p>
                                    <%= product.price %>
                                </p>
                                <a href="<%= product.url %>" target="_blank">View Details</a>
                            </div>
                        </li>
                        <% }) %>
                </ul>
            </div>
        </div>

        <% if (myntraData && myntraData.length > 0) { %> 
            <div id="myntra-results" class="column">
                <div class="column-header">Myntra Results</div>
                <div class="column-content">
                    <ul>
                        <!-- Myntra data rendering -->
                        <% myntraData.forEach(product => { %>
                            <li>
                                <img src="<%= product.image_url %>" alt="<%= product.title %>">
                                <div>
                                    <h3><%= product.title %></h3>
                                    <p><%= product.price %></p>
                                    <a href="<%= product.url %>" target="_blank">View Details</a>
                                </div>
                            </li>
                        <% }) %>
                    </ul>
                </div>
            </div>
        <% } %>
        

        <div class="column">
            <div class="column-header">Flipkart Results</div>
            <div class="column-content">
                <ul>
                    <!-- Flipkart data rendering -->
                    <% flipkartData.forEach(product=> { %>
                        <li>
                            <img src="<%= product.image_url %>" alt="<%= product.title %>">
                            <div>
                                <h3>
                                    <%= product.title %>
                                </h3>
                                <p>
                                    <%= product.price %>
                                </p>
                                <a href="<%= product.url %>" target="_blank">View Details</a>
                            </div>
                        </li>
                        <% }) %>
                </ul>
            </div>
        </div>
    </div>
</body>

</html>













